{
  "name": "friend-lines-app",
  "version": "1.0.0",
  "description": "A simple Express.js server with health endpoint",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "docker:build": "docker build -t friend-lines-app .",
    "docker:run": "docker run -p 3005:3005 --name friend-lines-server friend-lines-app",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "gcp:deploy": "./gcp-deploy.sh",
    "gcp:setup": "gcloud auth login && gcloud auth application-default login",
    "gcp:logs": "gcloud logs tail --service=friend-lines-app",
    "gcp:status": "gcloud run services describe friend-lines-app --region=us-central1"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": ["express", "server", "health"],
  "author": "",
  "license": "MIT"
}
